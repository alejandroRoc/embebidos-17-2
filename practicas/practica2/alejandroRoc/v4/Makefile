#==================================================================================================#
#---------------------------------- INSTITUTO POLITECNICO NACIONAL --------------------------------#
#----------------------------------- ESCUELA SUPERIOR DE COMPUTO ----------------------------------#
#--------------------------------------------------------------------------------------------------#
#------------------------------------ ROSAS CRUZ ERICK ALEJANDRO ----------------------------------#
#==================================================================================================#
DIR_TOP     :=  ./
DIR_INC     :=  $(DIR_TOP)include/
DIR_LIB     :=  $(DIR_TOP)lib/

DIR_SRC     :=  $(DIR_TOP)src/

DIR_MAIN    :=  $(DIR_TOP)main/
DIR_DEB     :=  $(DIR_TOP)debug/

DIR_OBJ     :=  $(DIR_TOP)obj/
DIR_BIN     :=  $(DIR_TOP)bin/
#--------------------------------------------------------------------------------------------------#
CC          :=  gcc
CCF         :=  -Wall -g -O2
#--------------------------------------------------------------------------------------------------#
LIBS        :=  -lm
#--------------------------------------------------------------------------------------------------#
INCLUDES    := -I$(DIR_INC)
#==================================================================================================#
PROYECTO    :=  $(DIR_BIN)muestreo.out

SRCS        :=  $(wildcard $(DIR_SRC)*.c)
OBJS        :=  $(patsubst $(DIR_SRC)%.c, $(DIR_OBJ)%.o, $(SRCS))
#==================================================================================================#

all: $(PROYECTO)

$(OBJS): $(DIR_OBJ)%.o : $(DIR_SRC)%.c
	$(CC) -o  $@ \
	      -c  $< \
      $(INCLUDES) \
      $(CCF)

$(PROYECTO): $(OBJS)
	$(CC) \
      $(OBJS) \
      -o $(PROYECTO) \
      $(INCLUDES) \
      $(LIBS) \
      $(CCF)
#--------------------------------------------------------------------------------------------------#
.PHONY: clean
clean:
	rm -f $(OBJS) $(PROYECTO)
